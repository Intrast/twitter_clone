<!DOCTYPE html>
<html>
  <head>
    <title>TwitterClone</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

      <div class="container-fluid">
        <% if current_user.present? %>
          <div class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container">
              <div class="navbar-header">
                <a class="navbar-brand" href="/">Twitter Clone</a>
                <button class="navbar-toggle" data-target=".navbar-collapse" data-toggle="collapse" type="button">
                  <span class="sr-only">Toggle navigation</span><span class="icon-bar"></span>
                </button>
              </div>
              <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right header-menu">
                  <li><a href="/users"><i class="fa fa-users"></i><span>Users</span></a></li>
                  <li><a href="/users/nazar"><i class="fa fa-user"></i><span>Profile</span></a></li>
                  <li><a href="/tweets"><i class="fa fa-comment"></i><span>All tweets</span></a></li>
                  <li><a href="/users/nazar/edit"><i class="fa fa-cog"></i><span>Setting</span></a></li>
                  <li><%= link_to 'Sign up', log_out_path, method: :delete if current_user%></li>
                </ul>
              </div>
            </div>
            </div>
        <% end %>
      <%= yield %>
    </div>
  </body>
</html>
