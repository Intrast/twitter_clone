<!DOCTYPE html>
<html>
  <head>
    <title>TwitterClone</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container-fluid">
      <% if current_user.present? %>
        <div class="navbar navbar-default navbar-fixed-top" role="navigation">
          <div class="container">
            <div class="navbar-header">
              <%= link_to 'Twitter Clone', root_path, class: 'navbar-brand'%>
            </div>
            <div class="navbar-collapse collapse">
              <ul class="nav navbar-nav navbar-right header-menu">
                <li><%= link_to 'Users', users_path, class: 'fa fa-users'%></li>
                <li><%= link_to 'Profile', edit_user_path(current_user.id), class: 'fa fa-user' %></li>
                <li><%= link_to 'All tweets', tweets_path, class: 'fa fa-comment' %></li>
                <li><a href="/users/nazar/edit"><i class="fa fa-cog"></i><span>Setting</span></a></li>
                <li><%= link_to 'Sign out', log_out_path, method:( :delete if current_user), class: 'fa fa-sign-out'%></li>
              </ul>
            </div>
          </div>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
