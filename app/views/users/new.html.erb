<h1>Sign up</h1>
<%= form_for @user do |form| %>
  <p><%= @user.errors.full_messages.join('. ')%></p>
<div class="form-group">
  <%= form.label :first_name %>
  <br>
  <%= form.text_field :first_name, class: 'form-group'%>
</div>
<div class="form-group">
  <%= form.label :last_name %>
  <br>
  <%= form.text_field :last_name, class: 'form-group' %>
</div>
<div class="form-group">
  <%= form.label :email %>
  <br>
  <%= form.text_field :email, class: 'form-group'%>
</div>
<div class="form-group">
  <%= form.label :password %>
  <br>
  <%= form.password_field :password, class: 'form-group' %>
</div>
<div class="form-group">
  <%= form.label :password_confirmation %>
  <br>
  <%= form.password_field :password_confirmation, class: 'form-group'%>
</div>
  <%= form.submit class: 'btn btn-success' %>
<% end %>
